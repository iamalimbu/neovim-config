syntax enable                           " Enables syntax highlighting
syntax on
set nowrap                              " Display long lines as just one line
set noerrorbells
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set number
set noswapfile
set nobackup
set relativenumber
set incsearch
set colorcolumn=80
highlight ColorColumn ctermbg=0 guibg=lightgrey

set foldmethod=indent   
set foldnestmax=10
set nofoldenable
set foldlevel=2



